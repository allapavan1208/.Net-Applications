@{
    ViewBag.Title = "Home Page";
}

<div class="page-header">
    <h2 class="text-center">Persons Details</h2>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">Add new Person</h2>
            </div>
            <div class="panel-body" data-bind="with: addPersonViewModel">
                @Html.Partial("_RegisterPerson")
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Person Details</h2>
            </div>
            <div class="panel-body" data-bind="with: personListViewModel">
                @Html.Partial("_PersonsList")
            </div>
        </div>
    </div>

</div>
@section Scripts{
<script src="~/Scripts/knockout-3.4.0.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/FamilyViewModel.js"></script>
    }